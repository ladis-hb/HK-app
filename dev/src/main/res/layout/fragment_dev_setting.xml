        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:text="@string/operation"
                    android:textColor="@color/black"
                    android:textColorHint="#FC050202" />

                <Button
                    android:id="@+id/btn_initdata_fragment_dev_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/InitData" />

                <Button
                    android:id="@+id/btn_refreshdata_fragment_dev_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/RefreshData" />

                <Button
                    android:id="@+id/frg_setting_btn_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ConfigSerialPort" />
                <!--
                <EditText
                    android:id="@+id/txtTest_setting"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="@string/UPS" />

                <Button
                    android:id="@+id/btnTest_setting"
                    android:layout_width="match_parent"
