                    android:text="test" />-->

                <Button
                    android:id="@+id/test_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TestPage" />

                <Button
                    android:id="@+id/btn_all_start"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="一键载入数据开启所有端口" />
            </LinearLayout>

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#00070707"></TextView>

            <LinearLayout
                android:layout_width="638dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="SerialPort1:" />

                    <EditText
                        android:id="@+id/devSettingFragment_txt_baudrate1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:hint="input baudrate... " />

                    <Button
                        android:id="@+id/devSettingFragment_btn_save1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/SAVE" />

                    <Button
                        android:id="@+id/devSettingFragment_btn_open1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/OPEN" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="SerialPort2:" />

                    <EditText
                        android:id="@+id/devSettingFragment_txt_baudrate2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:hint="input baudrate... " />

                    <Button
                        android:id="@+id/devSettingFragment_btn_save2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/SAVE" />

                    <Button
                        android:id="@+id/devSettingFragment_btn_open2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/OPEN" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="SerialPort3:" />

                    <EditText
                        android:id="@+id/devSettingFragment_txt_baudrate3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:hint="input baudrate... " />

                    <Button
                        android:id="@+id/devSettingFragment_btn_save3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/SAVE" />

                    <Button
                        android:id="@+id/devSettingFragment_btn_open3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/OPEN" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="615dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="SerialPort4:" />

                    <EditText
                        android:id="@+id/devSettingFragment_txt_baudrate4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:hint="input baudrate... " />

                    <Button
                        android:id="@+id/devSettingFragment_btn_save4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/SAVE" />

                    <Button
                        android:id="@+id/devSettingFragment_btn_open4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/OPEN" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"></TextView>


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="数据上传服务器："></TextView>

            <EditText
                android:id="@+id/txtUrl"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:hint="input server url ..."
                android:inputType="textUri" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="113dp"
                android:layout_height="31dp"
                android:text="Socket服务器:" />

            <EditText
                android:id="@+id/txtWebsocket"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:hint="input control uri ..."
                android:inputType="textUri" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btnUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SAVE" />

            <CheckBox
                android:id="@+id/frag_setting_cbx_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接到远程服务器" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_Socket_stat_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="50dp"
                    android:text="等待连接远程服务器" />

                <TextView
                    android:id="@+id/txt_Web_stat_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="50dp" />
            </LinearLayout>


        </LinearLayout>


