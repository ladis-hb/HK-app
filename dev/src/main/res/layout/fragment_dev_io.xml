<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="输入端口0"/>
        <TextView
            android:id="@+id/frag_io_txt_i0_msg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"/>
        <Button
            android:id="@+id/frag_io_btn_i0_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取电平信号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="输入端口2"/>
        <TextView
            android:id="@+id/frag_io_txt_i2_msg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"/>
        <Button
            android:id="@+id/frag_io_btn_i2_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取电平信号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="输出端口1"/>
        <Button
            android:id="@+id/frag_io_btn_o1_sethigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置高电平"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/frag_io_btn_o1_setlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置低电平"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="输出端口3"/>
        <Button
            android:id="@+id/frag_io_btn_o3_sethigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置高电平"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/frag_io_btn_o3_setlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置低电平"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>
